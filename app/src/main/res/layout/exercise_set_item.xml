<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="end">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_orderNumber_Warmup_DropSet"
        android:visibility="gone"
        android:layout_weight="0.1" />


    <TextView
        android:id="@+id/previousSet_TextView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="0.2"
        android:maxLines="1"
        android:text="100 kg / 10"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/weightPercentOf1RM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="0.15"
        android:ems="2"
        android:hint="%"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textSize="18dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/percentageSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="14dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextView_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="0.2"
        android:hint="kg"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text="100"
        android:textSize="18dp"

        android:textAlignment="center" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/editTextView_reps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="0.2"
        android:hint="rps"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:minEms="2"
        android:selectAllOnFocus="true"
        android:text="10"
        android:textSize="18dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/percentage_of_EpleyRM"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="0.16"
        android:maxLines="1"
        android:text="80%"
        android:textSize="14dp" />

    <CheckBox
        android:id="@+id/set_done_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />

</LinearLayout>
